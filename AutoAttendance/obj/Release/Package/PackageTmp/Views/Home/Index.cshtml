@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>AutoAttendance</h1>
    <p class="lead">Change the way you take attendance in class :)</p>
</div>

@if (User.Identity.IsAuthenticated)
{



    <div class="row">
        <div class="col-md-4">
            <h2>Add student</h2>
            <p>@Html.ActionLink("Add Student", "Create", "Student", null, new { @class = "btn btn-default" })</p>
        </div>
        <div class="col-md-4">
            <h2>View Students</h2>
            <p>@Html.ActionLink("View Students", "Index", "ClassName", null, new { @class = "btn btn-default" })</p>
        </div>
        <div class="col-md-4">
            <h2>Attendance Sheet</h2>
            <p>@Html.ActionLink("View Attendance Sheet", "IndexAttendance", "ClassName", null, new { @class = "btn btn-default" })</p>
        </div>
    </div>

}
else
{

    <div class="row">
        
            <h2>Login first for using the application</h2>
            <p>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default" })</p>
        
    </div>

}